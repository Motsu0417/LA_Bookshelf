<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4sp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_BookImageView"
        android:layout_width="110sp"
        android:layout_height="160sp"
        android:background="@drawable/background_image_books"
        android:outlineProvider="background"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/book_nomal"
        tools:srcCompat="@drawable/book_nomal" />

    <TextView
        android:id="@+id/item_BookTitle"
        android:layout_width="110sp"
        android:layout_height="wrap_content"
        android:text="Kotlin イン・アクション"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_Author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Dmitry Jemerov"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_TimeLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="0分前"
            android:textSize="8sp" />
    </LinearLayout>

</LinearLayout>